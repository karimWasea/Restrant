@model Cf_Viewmodels.productVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Save Product";
}

<h2>Create Product</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Save" method="post" enctype="multipart/form-data" class="form-horizontal p-4 border rounded bg-light shadow-sm">
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="form-label">Product Name</label>
                <input asp-for="ProductName" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" placeholder="Enter price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Qantity" class="form-label">Quantity</label>
                <input asp-for="Qantity" class="form-control" placeholder="Enter quantity" />
                <span asp-validation-for="Qantity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CategoryTyPe" class="form-label" style="font-weight: bold;">Category</label>
                <select class="form-select" asp-for="CategoryTyPe" asp-items="Model.CategoryIdList" data-placeholder="Select category">
                    <option value=""></option>
                </select>
                <span asp-validation-for="CategoryTyPe" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Enter description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Discount" class="form-label">Discount</label>
                <input asp-for="Discount" class="form-control" placeholder="Enter discount" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <div id="imagePreview" class="row"></div>
            </div>
            <div class="form-group d-flex justify-content-between">
                <button type="submit" id="savedata" class="btn btn-primary">
                    @if (Model.Id > 0)
                    {
                        @:Update
                    }
                    else
                    {
                        @:Add New
                    }
                </button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
<partial name="_AlertMessage" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-horizontal {
        background-color: #f5f6fa;
        border: 1px solid #dcdfe6;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #333;
    }

    .form-control,
    .form-select {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border-radius: 50px;
        border: 1px solid #dcdfe6;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #1877f2;
            box-shadow: 0 0 0 0.2rem rgba(24, 119, 242, 0.25);
        }

    .btn-primary {
        background-color: #1877f2;
        border-color: #1877f2;
        color: #fff;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #165cbd;
            border-color: #165cbd;
        }

    .btn-secondary {
        background-color: #e0e0e0;
        border-color: #e0e0e0;
        color: #000;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #c6c6c6;
            border-color: #c6c6c6;
        }
</style>
