 @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable< DataAcessLayers.Applicaionuser>

@{
    Layout = "_Layout";

    ViewData["Title"] = "Index";
}



@*<partial name="_AlertMessage" />
*@<div class="container p-3">


    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">System Users</h2>
        </div>
    </div>


    <table class="table table-hover bg-primary"
           id="table">
        <thead>
            <tr>
                <th scope="col" class="bg-primary text-light">
                    User Id
                </th>
                <th scope="col" class="bg-primary text-light">
                    User Name
                </th>
                <th scope="col" class="bg-primary text-light">
                    Edit/Add Role
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="30%">
                        @item.Id
                    </td>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        <a asp-controller="Roles" asp-action="addRoles" asp-route-userId="@item.Id" class="btn btn-sm btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




