@model Cf_Viewmodels.ApplicaionuserVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "تعديل ";
}

<h2>تعديل</h2>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Save" method="post" class="form-horizontal p-4 border rounded bg-light shadow-sm" style="background-color: #ad8313 !important;">
            <div class="form-group mb-3">
                <label asp-for="UserNme" class="form-label">الاسم</label>
                <input asp-for="UserNme" class="form-control" placeholder="أدخل الاسم" />
                <span asp-validation-for="UserNme" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CustomerType" class="form-label" style="font-weight: bold;">النوع:</label>
                <select class="form-select" asp-for="CustomerType" asp-items="Model.CustomerTypeList" data-placeholder="Select CustomerType">
                    <option value=""></option>
                </select>
                <span asp-validation-for="CustomerType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gender" class="form-label" style="font-weight: bold;">الجنس:</label>
                <select class="form-select" asp-for="Gender" asp-items="Model.GenderList" data-placeholder="Select Gender">
                    <option value=""></option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div id="imagePreview" class="row"></div>
            </div>

            <div class="form-group d-flex justify-content-between">
                <button type="submit" id="savedata" class="btn btn-primary">
                    @if (Model.Id != null)
                    {
                        @:Update
                    }
                    else
                    {
                        @:Add New
                    }
                </button>
                <a asp-action="Index" class="btn btn-secondary">العودة للرئيسية</a>
            </div>
        </form>
    </div>
</div>
<partial name="_AlertMessage" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-horizontal {
        background-color: #ad8313 !important;
        border: 1px solid #dcdfe6;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #333;
    }

    .form-control,
    .form-select {
        background-color: #ad8313 !important;
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border-radius: 50px;
        border: 1px solid #dcdfe6;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #1877f2;
            box-shadow: 0 0 0 0.2rem rgba(24, 119, 242, 0.25);
        }

    .btn-primary {
        background-color: #1877f2;
        border-color: #1877f2;
        color: #fff;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #165cbd;
            border-color: #165cbd;
        }

    .btn-secondary {
        background-color: #e0e0e0;
        border-color: #e0e0e0;
        color: #000;
        padding: 0.5rem 1.5rem;
        border-radius: 50px;
        transition: background-color 0.3s, border-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #c6c6c6;
            border-color: #c6c6c6;
        }
</style>
