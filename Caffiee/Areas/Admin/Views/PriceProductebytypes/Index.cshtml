 <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Qantity)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.First().CustomerTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Discount)
            </th>
            <th> خيارات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                item.CustomerTypeName = item.CustomerType.GetDescription();
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Qantity)</td>
                    <td>@Servess.DescriptionEnum.GetDescription(item.CustomerType)</td>
                    <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                    <td>
                        <a asp-action="Save" asp-route-ProductId="@item.ProductId" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a href="javascript:void(0);" class="delete-link" data-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No items to display.</td>
            </tr>
        }
    </tbody>
</table>
