@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "عفوا ليس لديك صلاحية";
}

<style>
    .access-denied-container {
        margin-top: 50px;
        text-align: center;
    }

    .access-denied-icon {
        font-size: 100px;
        color: #dc3545; /* Bootstrap danger color */
    }

    .access-denied-message {
        margin-top: 20px;
        font-size: 1.5rem;
    }

    .home-button {
        margin-top: 30px;
    }
</style>

<div class="container access-denied-container">
    <div class="access-denied-icon">
        <i class="fas fa-exclamation-triangle"></i>
    </div>
    <h1 class="text-danger">@ViewData["Title"]</h1>
    <p class="text-danger access-denied-message">غير مسموح لك بالوصول إلى هذه الصفحة.</p>
    <p class="access-denied-message">يرجى الاتصال بالمسؤول إذا كنت تعتقد أن هذا خطأ.</p>
    <a href="/" class="btn btn-primary home-button">العودة إلى الصفحة الرئيسية</a>
</div>
