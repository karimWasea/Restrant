    }
</style> *@
 <div class="row justify-content-center" id="longout" >
    <div class="col-md-4">
        <section>
            <form id="account" method="post" class="form-signin">
                <h2 class="h3 mb-3 fw-normal">تسجيل الدخول</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">ادخل الايميل</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password" class="form-label">ادخل كلمه المرور</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        تذكرنى
@*                         @Html.DisplayNameFor(m => m.Input.RememberMe)
 *@                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">   تسجيل الدحول</button>

             @*    <div class="mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create New Account</a>
                    </p>
                </div> *@
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin-bottom: 60px;
        background-color: saddlebrown;
    }

    .form-signin {
        background-color: #ffffff;
        padding: 15px;
        border: 1px solid #dcdfe6;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

   #longout{

       margin-top:100px;
   }
        .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }

        .form-signin .form-floating {
            margin-bottom: 15px;
        }

        .form-signin .btn-primary {
            background-color: #1877f2;
            border-color: #1877f2;
            padding: 10px;
            font-size: 16px;
        }

            .form-signin .btn-primary:hover {
                background-color: #165cbd;
                border-color: #165cbd;
            }

        .form-signin a {
            color: #1877f2;
            text-decoration: none;
        }

            .form-signin a:hover {
                text-decoration: underline;
            }

    .form-check-label {
        font-size: 14px;
    }
</style>
