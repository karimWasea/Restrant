<!DOCTYPE html>
<html lang="ar" dir="rtl">
 <!-- Set language to Arabic and text direction to right-to-left -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - الكافيه</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Caffiee.styles.css" asp-append-version="true" />
    <style>

        .nav-link {
            border: 1px solid transparent; /* Add a transparent border to all links */
            border-radius: 0; /* Remove any existing border radius */
            transition: border-color 0.3s; /* Add transition effect to border color */
        }

     </style>
      
</head>
 
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Caffiee</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                اعدادات
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="PriceProductebytypes" asp-action="Index">اعدادات الاسعار</a>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Index">اعدادات االمنتجات</a>
@*                                 <a class="dropdown-item" asp-controller="Category" asp-action="Index">اعدادت الانواع</a>
 *@                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="PriceProductebytypes" asp-action="GetProductbytyp" asp-route-CustomerType="@C_Utilities.Enumes.CustomerType.OtherPeople">ألاسعار للحالات</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="PriceProductebytypes" asp-action="GetProductbytyp" asp-route-CustomerType="@C_Utilities.Enumes.CustomerType.Nursing">ألاسعار للتمريض</a>
                        </li>
                        
                   @*      <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="PriceProductebytypes" asp-action="GetProductbytyp" asp-route-CustomerType="@C_Utilities.Enumes.CustomerType.HospitalManagement">الاسعار للمستشفى  </a>
                        </li>  *@  
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="PriceProductebytypes" asp-action="GetProductbytyp" asp-route-CustomerType="@C_Utilities.Enumes.CustomerType.oprations"> الاسعار للعمليات  </a>
                        </li> 
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="PriceProductebytypes" asp-action="GetProductbytyp" asp-route-CustomerType="@C_Utilities.Enumes.CustomerType.Worker">ألاسعار للعمال</a>
                        </li>  
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Roles" asp-action="Index"  >الادوار الامنبه</a>
                        </li>  
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="User" asp-action="Index"  > العملاء
                                </a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
      
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
 
 

